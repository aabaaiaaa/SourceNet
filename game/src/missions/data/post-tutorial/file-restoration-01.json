      "description": "Connect to primary database server",
      "type": "fileSystemConnection",
      "target": "db-server"
    },
    {
      "id": "obj-5",
      "description": "Restore backup files to primary server",
      "type": "fileOperation",
      "operation": "copy",
      "count": 12
    }
  ],

